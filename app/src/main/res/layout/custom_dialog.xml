<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <Button
        android:id="@+id/profile_image_center"
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size30"
        android:layout_gravity="top|right"
        android:layout_marginBottom="@dimen/size_minus16"
        android:layout_marginEnd="@dimen/size8"
        android:background="@drawable/ic_cancel"
        android:clickable="true"
        android:focusable="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image_center"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size16"
            android:layout_marginRight="@dimen/size16"
            app:cardCornerRadius="@dimen/size16"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size30"
                android:layout_marginTop="@dimen/size35"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/size25"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSize18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/size10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size40"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/size10"
                        android:text="Yes"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textSize15" />

                    <Button
                        android:id="@+id/camera"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size40"
                        android:layout_marginLeft="@dimen/size20"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/size10"
                        android:text="No"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textSize15" />

                </LinearLayout>

                <!--android:background="?android:colorPrimary"-->

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>